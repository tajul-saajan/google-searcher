<script src="/public/jquery.min.js"></script>
<!-- Table with Pagination -->
<div class="bg-white p-4 rounded-md shadow-sm mb-8">

  <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
    <div class="mb-4">
      <div class="flex justify-between my-1 py-2 text-white bg-gray-800 px-4  border rounded">
        <div>Items Per Page: <span class="font-bold">{{ data.meta.itemsPerPage}}</span></div>
        <div>Total Items: <span class="font-bold">{{ data.meta.totalItems}}</span></div>
        <div>Current Page: <span class="font-bold">{{ data.meta.currentPage}}</span></div>
        <div>Total Pages: <span class="font-bold">{{ data.meta.totalPages}}</span></div>
      </div>
    </div>
    <div class="shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full text-sm text-gray-400">
        <thead class="bg-gray-800 text-xs uppercase font-medium">
        <tr>
          <th scope="col" class="px-6 text-center py-3 text-left tracking-wider">
            KEYWORD
          </th>
        </tr>
        </thead>
        <tbody class="bg-gray-800">
        {{#each data.data}}
          <tr class="bg-black bg-opacity-20">
            <td class="pl-4 text-center">{{keyword}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination Links -->
  <div class="px-5 py-5 bg-white border-t flex flex-col xs:flex-row items-center xs:justify-between">
    <!-- Replace with your pagination component -->
    <div class="inline-flex mt-2 xs:mt-0">
      <a href="{{data.links.previous}}"
         class="text-sm text-indigo-500 leading-none rounded hover:underline">Previous</a>
      <a href="{{data.links.next}}" onclick="loadUrl()"
         class="text-sm text-indigo-500 leading-none rounded hover:underline ml-3">Next</a>
    </div>
  </div>
